<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.padcmyanmar.smtz.themoviebookingapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".MovieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheMovieBookingApp">
        <activity android:name=".activities.SeatingPlanActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBookingApp.TransparentStatusBar">

        </activity>
        <activity
            android:name=".activities.VoucherActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBookingApp.TransparentStatusBar">
        </activity>
        <activity android:name=".activities.NewCardActivity" />
        <activity
            android:name=".activities.ChooseCardActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBookingApp.TransparentStatusBar"/>
        <activity
            android:name=".activities.SnackScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBookingApp.TransparentStatusBar" />
        <activity
            android:name=".activities.TimeScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBookingApp.TransparentStatusBar" />
        <activity
            android:name=".activities.MovieDetailActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBookingApp.TransparentStatusBar" />
        <activity
            android:name=".activities.HomeScreenActivity"
            android:launchMode="singleTask"
            android:exported="true" />
        <activity
            android:name=".activities.AccountActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBookingApp.TransparentStatusBar" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBookingApp.TransparentStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>